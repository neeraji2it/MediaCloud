<div class="span3">
  <div id="widget_flickr-2" class="widget widget_flickr">
  <h6 class="widget-title">
  <span>Quick Contact</span>
  </h6>
  <div class="flickr_container">

  <%= form_tag({:action => 'contact', :controller => 'homes'},:remote => true, :class => "standard-form row-fluid",:name=>"contactForm", :method=>"post", :id => "quick_contact_form") do %>
              <%= text_field_tag :name, params[:name],:placeholder => "Name", :class=>"span6 bgwhite", required: true %>
            
              <%= email_field_tag :email, params[:email],:placeholder => "E-mail" ,:class=>"span6 bgwhite", required: true %>

              <%= hidden_field_tag :subject, "Hide",:placeholder => "Subject", :class=>"span6 bgwhite", required: true %>
              <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <%= text_area_tag :message, params[:message],:placeholder => "Message" , :class=>"span6 bgwhite", :cols=>"40",:rows=>"7", required: true %>

            <div class="captcha-wrapper">
              <span id="quick-captcha-first">
                <%= captcha_number_max %>
              </span>
              <span id="quick-captcha-middle">
                <%= captcha_symbol %>
              </span>
              <span id="quick-captcha-last">
                <%= captcha_number_min %>
              </span>
              <span> = </span>
            </div>
            <div class="quick-captcha-error-msg error"></div>
            <%= text_field_tag :quick_captcha_result, nil, placeholder: 'result', class: 'quick-captcha-input' %>
            <br/>

            <div class="span3">
            <%= submit_tag :submit, :id => "quick-contact-button" ,:class=>"span3", :class=>"custom_btn" %></div>
  <% end %>

  </div>
  </div>                            
</div>

<style>
  .error {
    color: red;
  }

  .span6.bgwhite {
    background: none repeat scroll 0 0 white !important;
  } 
</style>

<script>
 $("#quick_contact_form").validate();
</script>